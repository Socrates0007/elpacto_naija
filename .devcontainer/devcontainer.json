{
  "name": "Python App",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",

  // After container is created, install requirements
  "postCreateCommand": "pip install -r requirements.txt",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    }
  },

  "runArgs": ["--env", "PYTHONUNBUFFERED=1"],

  // Default command to run when Codespace starts
  "overrideCommand": false
}
